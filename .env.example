# qBittorrent Configuration
QBITTORRENT_URL=http://localhost:8080
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=your_password_here

# Application Configuration
# Port the application runs on inside the container
PORT=3000
# Port exposed on the host machine
HOST_PORT=3745
# Node.js Environment Configuration
# Set to 'development' for development mode with detailed error messages and debugging
# Set to 'production' for production mode with optimized performance and security
NODE_ENV=development

# FileBot Configuration
# Path to your FileBot license file on the host machine
FILEBOT_LICENSE_FILE=./FileBot_License_XXXXXXXXXX.psm
# FileBot databases (TheTVDB, TheMovieDB, AniDB, etc.)
FILEBOT_TV_DATABASE=TheTVDB
FILEBOT_MOVIE_DATABASE=TheMovieDB
# FileBot naming formats
FILEBOT_TV_FORMAT={plex}
FILEBOT_MOVIE_FORMAT={plex}
# FileBot execution timeout in milliseconds
FILEBOT_TIMEOUT_MS=30000

# Volume Paths
# Path to downloads directory on host machine
DOWNLOADS_PATH=./downloads
# Path to filebot data directory on host machine  
FILEBOT_DATA_PATH=./filebot-data

# Performance & Security Settings
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE='Too many requests from this IP, please try again later.'
# Request size limits
REQUEST_SIZE_LIMIT=10mb
# Path validation limits
MAX_PATH_LENGTH=1000
MAX_RENAME_BATCH_SIZE=100

# qBittorrent API Settings
# Authentication timeout in milliseconds
QB_AUTH_TIMEOUT_MS=10000
# Request timeout in milliseconds
QB_REQUEST_TIMEOUT_MS=15000
# Maximum retry attempts for failed requests
QB_MAX_RETRIES=2
# Maximum authentication retry attempts
QB_MAX_AUTH_RETRIES=3